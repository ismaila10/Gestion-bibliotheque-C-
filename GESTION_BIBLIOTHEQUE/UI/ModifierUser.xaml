        <PasswordBox x:Name="password1_txt" HorizontalAlignment="Left" Margin="649,30,0,0" VerticalAlignment="Top" Width="190"  Background="White" Foreground="#FF0A0808" FontFamily="Lucida Fax" FontSize="14" MaxLength="10" TextOptions.TextFormattingMode="Display" Height="38" Grid.Row="1" RenderTransformOrigin="0.536,-0.742" FontWeight="Bold"/>
        <PasswordBox x:Name="password2_txt" HorizontalAlignment="Left" Margin="648,120,0,0" Grid.Row="1" VerticalAlignment="Top" Width="190"  Background="White" Foreground="#FF0A0808" FontFamily="Lucida Fax" FontSize="14" MaxLength="10" TextOptions.TextFormattingMode="Display" Height="38" FontWeight="Bold"/>
